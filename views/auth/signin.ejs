<div class="grid-container">
  <header class="index-logo-container">
    <img src="../img/petpal.png" alt="logo" class="index-logo">
  </header>
  <main class="index-auth-container">
    <h1>Welcome back!</h1>
    <form action="/signin" method="POST" class="signin-form">

      <header class="signin-header">
        <h1>Sign in</h1>
      </header>

      <input type="email" id="email" name="email" placeholder="Email" required>
      <input type="password" id="password" name="password" placeholder="Password" required>
      <button type="submit" class="index-signin">Sign In</button>
      <p>Don't have an account? <a href="/signup">Sign up</a></p>
      <p class="signin-divider">Or sign in with</p>
      <div class="social-signin">
        <a href="#" class="signin-google">Google</a>
      </div>
    </form>
  </main>
</div>