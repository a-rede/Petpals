<div class="grid-container">
  <header class="index-logo-container">
    <img src="../img/petpal.png" alt="logo" class="index-logo">
  </header>
  <main class="index-auth-container">
    <h1>Welcome to Petpal!</h1>
    <form action="/signup" method="POST" class="signin-form">

      <header class="signin-header">
        <h1>Sign up</h1>
      </header>
      <input type="name" id="name" name="name" placeholder="Name" required>
      <input type="email" id="email" name="email" placeholder="Email" required>
      <input type="password" id="password" name="password" placeholder="Password" required>
      <button type="submit" class="index-signin">Sign Up</button>
      <p>Already have an account? <a href="/signin">Sign in</a></p>
      <p class="signin-divider">Or sign up with</p>
      <div class="social-signin">
        <a href="#" class="signin-google">Google</a>
      </div>
    </form>
  </main>
</div>