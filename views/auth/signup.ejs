<div class="grid-container">
  <%- include('../partials/logo.ejs') %>
  <main>
    <div class="loginbox">
      <form>
        <h2>Create your account</h2>

        <!-- <label for="loginid">E-mail</label> -->
        <i class="fa-regular fa-envelope"></i>
        <input type="text" id="E-mail" placeholder="Type your E-mail address" name="E-mail" required />

