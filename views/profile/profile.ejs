<div class="main-grid-container">
  <%- include('../partials/header') %>
  <main class="profile-container">
    <header class="messages">
      <div>
        <h1 class="welcome-msg">Your profile, <%= user.name %>:</h1 </div>
    </header>
    <section class="profile-list" id="appt-list">
      <form action="/profile/update" method="POST">
        <div class="profile-item">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" value="<%= user.name %>" required>
        </div>
        <div class="profile-item">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" value="<%= user.email %>" required>
        </div>
        <div class="profile-item">
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" placeholder="Enter new password to update">
        </div>
        <input type="submit" value="Update" class="profile-submit">
      </form>
    </section>
  </main>
</div>