<div class="main-grid-container">
  <%- include('../partials/header') %>
  <main class="pet-container">
    <header class="messages">
      <div>
        <h1 class="welcome-msg">Add your pet here:</h1>
      </div>
    </header>
    <section class="add-pet-container">
      <form action="/pets/add-pet" method="POST" class="pet-form">
        <div class="first-column">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" required>

          <label for="type">Type of Pet</label>
          <input type="text" id="type" name="type" required>

          <label for="breed">Breed of Pet</label>
          <input type="text" id="breed" name="breed" required>

          <label for="age">Age of Pet</label>
          <input type="text" id="age" name="age" required>

          <label for="sex">Sex of Pet</label>
          <input type="text" id="sex" name="sex" required>

          <label for="neutered">Neutered/Spayed</label>
          <input type="text" id="neutered" name="neutered" required>

          <label for="weight">Weight</label>
          <input type="text" id="weight" name="weight" required>

          <label for="health-history">Health History</label>
          <textarea id="health-history" name="health-history" rows="4" required></textarea>

          <label for="behavior">Behavioral Traits</label>
          <textarea id="behavior" name="behavior" rows="4" required></textarea>
        </div>
        <div class="second-column">
          <label for="diet">Dietary Preferences and Restrictions</label>
          <textarea id="diet" name="diet" rows="4" required></textarea>

          <label for="exercise">Exercise Routine</label>
          <textarea id="exercise" name="exercise" rows="4" required></textarea>

          <label for="grooming">Grooming Needs</label>
          <textarea id="grooming" name="grooming" rows="4" required></textarea>

          <label for="microchip">Microchip Number</label>
          <input type="text" id="microchip" name="microchip" required>

          <label for="insurance">Pet Insurance Details</label>
          <textarea id="insurance" name="insurance" rows="4" required></textarea>

          <label for="emergency-contact">Emergency Contact</label>
          <input type="text" id="emergency-contact" name="emergency-contact" required>

          <label for="special-needs">Special Needs or Considerations</label>
          <textarea id="special-needs" name="special-needs" rows="4" required></textarea>
        </div>
        <button type="submit" class="add-pet-btn">Add Pet</button>
      </form>
    </section>
  </main>
</div>