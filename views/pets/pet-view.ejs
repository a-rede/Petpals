<div class="main-grid-container">
  <%- include('../partials/header') %>
  <main class="pet-container">
    <header class="messages">
      <div>
        <h1 class="appointment-msg">Here are your pets:</h1>
      </div>
    </header>
    <section class="pet-list">
      <% if (pets.length > 0) { %>
      <% pets.forEach(function(pet) { %>
      <div class="pet-item-body">
        <h2 class="pet-item-header"><%= pet.name %> (<%=pet.type%>)</h2>
        <p>Breed: <%= pet.breed %></p>
        <p>Age: <%= pet.age %></p>
        <p>Weight: <%= pet.weight %></p>
        <p>Sex: <%= pet.sex %></p>
        <p>Emergency Contact: <%= pet['emergency-contact'] %></p>
        <p>Neutered/Spayed: <%= pet.neutered %></p>
        <a href="/pets/<%= pet.id %>" class="expand-content"><img src="/img/down-arrow.png" alt="down arrow"></a>
      </div>
      <% }); %>
      <% } else { %>
      <div class="search-fail">
        <img src="/img/search.png" alt="failed search"></img>
        <p>No pets found for <%= user.name %>.</p>
      </div>
      <% } %>
    </section>
  </main>
</div>